<div class="modal" id="modallistavatar" is="dmx-bs5-modal" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Choisessez son avatar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <div class="row" is="dmx-repeat" id="repeatAvatarModal">
                            <div class="col-2" dmx-bind:repeat="sc_listavatar.data.query">
                                <img id="idmodalavatar" width="60" height="60" alt="60" class="card-img-top img-fluid" alt="Avatar" dmx-bind:src="/assets/img/avatars/{{avatar}}.png">
                            </div>
                        </div>
                    </div>
                </div>
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalprincipal" is="dmx-bs5-modal" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter Élève&nbsp;</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form is="dmx-serverconnect-form" id="serverconnectformAddElever" method="post" action="/api/eleves/addeleve" dmx-generator="bootstrap5" dmx-form-type="vertical" dmx-on:success="serverconnectformAddElever.reset();modal1.hide();notifies.success('Élève ajouter avecc succès  :)')">


                    <div class="row gx-3">
                        <div class="col">
                            <div class="form-group mb-3">
                                <label for="inp_nickname">Nickname</label>
                                <input type="text" class="form-control" id="inp_nickname" name="nickname" aria-describedby="inp_nickname_help" placeholder="Enter Nickname" required="">
                                <small id="inp_nickname_help" class="form-text text-muted">Your input is very valuable.</small>
                            </div>
                        </div>
                    </div>
                    <div class="row gx-3">
                        <div class="col">
                            <div class="form-group mb-3">
                                <label for="inp_linkavatar">Avatar</label>
                                <input type="text" class="form-control" id="inp_linkavatar" name="linkavatar" aria-describedby="inp_nickname_help" placeholder="Enter Nickname" required="">
                                <small id="inp_linkavatar_help" class="form-text text-muted">Your input is very valuable.</small>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="row" is="dmx-repeat" dmx-generator="bs5grid" dmx-bind:repeat="sc_list_eleve.data.query" id="repeatCard">
                                <div class="col-2 mb-4 text-center">
                                    <div class="card">
                                        <img class="card-img-top img-fluid" alt="Avatar" dmx-bind:src="/assets/img/avatars/{{linkavatar}}.png">

                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                    <div class="row gx-3">
                        <div class="col">
                            <div class="form-group mb-3">
                                <label for="inp_annee">Annee</label>
                                <input type="text" class="form-control" id="inp_annee" name="annee" aria-describedby="inp_annee_help" placeholder="Enter Annee" required="">
                                <small id="inp_annee_help" class="form-text text-muted">Your input is very valuable.</small>
                            </div>
                        </div>
                    </div>
                    <div class="row gx-3">
                        <div class="col">
                            <div class="form-group mb-3">
                                <label for="inp_professora">Professora</label>
                                <input type="text" class="form-control" id="inp_professora" name="professora" aria-describedby="inp_professora_help" placeholder="Enter Professora" required="">
                                <small id="inp_professora_help" class="form-text text-muted">Your input is very valuable.</small>
                            </div>
                        </div>
                    </div>
                    <div class="row gx-3">
                        <div class="col">
                            <div class="form-group mb-3">
                                <label for="inp_email">Email</label>
                                <input type="text" class="form-control" id="inp_email" name="email" aria-describedby="inp_email_help" placeholder="Enter Email" required="" data-rule-email="">
                                <small id="inp_email_help" class="form-text text-muted">Your input is very valuable.</small>
                            </div>
                        </div>
                    </div>
                    <div class="row gx-3">
                        <div class="col">
                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-primary" dmx-bind:disabled="state.executing">Ajouter <span class="spinner-border spinner-border-sm" role="status" dmx-show="state.executing"></span></button>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group mb-3">
                                <button type="reset" class="btn btn-outline-danger">Reset</button>
                            </div>
                        </div>
                    </div>

                </form>
                <div class="row">
                    <div class="col">
                        <button id="btn1" class="btn" dmx-on:click="" data-bs-toggle="modal" data-bs-target="#modallistavatar">Button</button>
                    </div>
                </div>
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

